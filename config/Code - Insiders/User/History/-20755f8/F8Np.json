{
  "workbench.activityBar.location": "top",
  "editor.cursorSmoothCaretAnimation": "on",
  "window.customTitleBarVisibility": "auto",
  "explorer.confirmDelete": false,
  "editor.suggest.showFolders": false,
  "explorer.compactFolders": false,
  "explorer.expandSingleFolderWorkspaces": false,
  "breadcrumbs.icons": false,
  "breadcrumbs.enabled": false,
  "editor.fontLigatures": true,
  "diffEditor.codeLens": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {},
  "editor.quickSuggestions": { "strings": true },
  "editor.minimap.enabled": false,
  "editor.smoothScrolling": true,
  "editor.wordWrapColumn": 500,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.formatOnSave": true,

  // * prettier settings *
  "prettier.trailingComma": "none",
  "prettier.bracketSameLine": true,
  "prettier.useEditorConfig": false,
  "workbench.list.smoothScrolling": true,

  // * terminal settings *
  "terminal.integrated.gpuAcceleration": "off",
  "terminal.integrated.defaultProfile.windows": "fish",
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.fontFamily": "'JetbrainsMono Nerd Font', 'FiraCode Nerd Font', 'Hack Nerd Font', 'monospace'",
  "terminal.integrated.lineHeight": 1.5,

  "html.format.contentUnformatted": "",
  "settingsSync.ignoredSettings": [],
  "go.toolsManagement.autoUpdate": true,
  "javascript.updateImportsOnFileMove.enabled": "never",
  "vscode_vibrancy.opacity": 0.1,
  "npm.keybindingsChangedWarningShown": true,
  "window.titleBarStyle": "custom",
  "redhat.telemetry.enabled": false,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "svg.preview.mode": "img",
  "cmake.configureOnOpen": false,
  "cmake.showOptionsMovedNotification": false,
  "explorer.confirmDragAndDrop": false,
  // "editor.fontFamily": "'Operator Mono Lig', 'JetbrainsMono Nerd Font', 'FiraCode Nerd Font', 'Hack Nerd Font', 'monospace'",
  "editor.lineNumbers": "relative",
  "editor.fontFamily": "'FiraCode Nerd Font'",
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "underline-thin",

  "editor.lineHeight": 1.5,

  "workbench.iconTheme": "github-icons-for-vscode",
  "editor.semanticTokenColorCustomizations": {
    "enabled": true
  },
  "editor.semanticHighlighting.enabled": true,
  "workbench.statusBar.visible": false,
  "window.menuBarVisibility": "classic",
  "remoteHub.commitDirectlyWarning": "off",
  "editor.renderWhitespace": "all",
  "editor.autoClosingBrackets": "always",
  "security.workspace.trust.untrustedFiles": "open",
  "window.confirmSaveUntitledWorkspace": false,
  "editor.fontSize": 16,
  "editor.autoClosingQuotes": "always",
  "workbench.colorTheme": "OM Theme (Default Dracula Italic)",
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.terminalChatLocation": "quickChat"
}
